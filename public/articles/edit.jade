doctype html

block title
  title
    |Edit Article

block content

  button
    a(href= '/articles' style= 'text-decoration: none') Back

  if(article)
    form(method="POST" action="/articles/#{article.title}?_method=PUT")
        p= 'title'
        input( name= 'title' value= article.title placeholder= 'title')

        p= 'body'
        input( name= 'body' value= article.body placeholder= 'body')

        p= 'author'
        input( name= 'author' value= article.author placeholder= 'author')
        br
        br
        button Submit

        form(method="POST" action="/articles/#{article.title}?_method=DELETE")
          button Delete This

    form(method="POST" action="/articles/#{article.title}?_method=DELETE")
      button Delete This

